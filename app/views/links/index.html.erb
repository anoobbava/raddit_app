<h1>Links</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.title %></td>
        <td><%=link.url%></td>
        <td><%= link_to 'Show', link %></td>
        <% if link.user == current_user %>
          <td><%= link_to 'Edit', edit_link_path(link) %></td>
          <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><%=link.comments.count %>comments
        <% end %>
      </tr>
      <tr>
        <td><a class="btn btn-default btn-sm" href="<%= link.url %>">Visit Link</a></td>
        <td><%=link_to like_link_path(link), method: :put, class: 'btn btn-default btn-sm' do %>
          <span class="glyphicon glyphicon-chevron-up"></span>
          upvote <%=link.get_upvotes.size%></td>
        <% end %>
        <td><%=link_to dislike_link_path(link), method: :put, class: 'btn btn-default btn-sm' do %>
          <span class="glyphicon glyphicon-chevron-down"></span>
          downvote<%=link.get_downvotes.size%></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Link', new_link_path %>
